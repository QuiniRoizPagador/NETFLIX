<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Define Form View -->
		<record id="view_bso_form" model="ir.ui.view">
			<field name="name">view_bso_form</field>
			<field name="model">bso</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Bsos">
					<field name="name" />
					<field name="composer" />
					<field name="producer" />
					<field name="studio" />
				</form>
			</field>
		</record>

		<!-- Define Tree View -->
		<record id="view_bso_tree" model="ir.ui.view">
			<field name="name">view_bso_tree</field>
			<field name="model">bso</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Bsos">
					<field name="name" />
					<field name="composer" />
					<field name="producer" />
					<field name="studio" />
				</tree>
			</field>
		</record>
		
		<!-- Define Search View -->
		<!--
		<record id="view_bso_search" model="ir.ui.view">
			<field name="name">view_bso_search</field>
			<field name="model">bso</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Bsos">
					<field name="composer" />
					<field name="producer" />
					<field name="studio" />
				</search>
			</field>
		</record>
		-->
		
		<!-- Define Action -->
		<record id="act_bso" model="ir.actions.act_window">
			<field name="name">Bso</field>
			<field name="res_model">bso</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<!--
			<field name="search_view_id" ref="view_bso_search" />
			-->
		</record>
		
		<!-- Define MenuItem -->
		<menuitem id="submenu_bso" name="Bso" parent="categories" action="act_bso" />
	</data>	
</openerp>